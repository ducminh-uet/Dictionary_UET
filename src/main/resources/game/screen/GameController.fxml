<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="game.screen.GameController"
            prefHeight="400.0" prefWidth="600.0">

    <!-- Define the user interface elements for your quiz game -->
    <VBox alignment="CENTER" spacing="20" layoutX="150.0" layoutY="50.0">
        <Label fx:id="myTitle" text="Question Title" />
        <Label fx:id="myQuestion" text="Question Text" />

        <RadioButton fx:id="option1" text="Option 1" />
        <RadioButton fx:id="option2" text="Option 2" />
        <RadioButton fx:id="option3" text="Option 3" />
        <RadioButton fx:id="option4" text="Option 4" />

        <Button text="Next Question" onAction="#nextQuestion" />
        <Button text="Select Answer" onAction="#selectAnswer" />

    </VBox>

</AnchorPane>
